@model ToDoApp.Models.Note

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Başlık -->
            <div class="text-center mb-4">
                <h1 class="display-5 text-primary fw-bold">📝 Yeni Not Ekle</h1>
                <p class="lead text-muted">Hızlıca yeni bir not oluştur</p>
            </div>

            <!-- Create Form Kartı -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Başlık</label>
                            <input asp-for="Title" class="form-control form-control-lg" placeholder="Not başlığını girin..." />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">İçerik</label>
                            <textarea asp-for="Content" class="form-control" rows="5" placeholder="Not içeriğini yazın..."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-plus-circle"></i> Notu Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Geri Dön Linki -->
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Listeye Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
