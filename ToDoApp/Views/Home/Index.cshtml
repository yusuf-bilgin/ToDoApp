@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Başlık ve Hoş Geldiniz Mesajı -->
            <div class="text-center mb-5">
                <h1 class="display-4 text-primary fw-bold">📝 My To-Do List</h1>
                <p class="lead text-muted">Organize your tasks and boost productivity</p>
            </div>

            <!-- Hızlı Ekleme Formu -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form id="addTaskForm" class="row g-2">
                        <div class="col-md-9">
                            <input type="text" class="form-control form-control-lg" placeholder="Add a new task..." required>
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="bi bi-plus-circle"></i> Add Task
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Filtreleme Butonları -->
            <div class="d-flex justify-content-between mb-3">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-secondary active">All</button>
                    <button type="button" class="btn btn-outline-secondary">Active</button>
                    <button type="button" class="btn btn-outline-secondary">Completed</button>
                </div>
                <small class="text-muted">5 tasks remaining</small>
            </div>

            <!-- To-Do Listesi -->
            <div class="list-group">
                <!-- Örnek Task 1 (Tamamlanmış) -->
                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" checked id="task1">
                        <label class="form-check-label text-decoration-line-through text-muted" for="task1">
                            Buy groceries
                        </label>
                    </div>
                    <button class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>

                <!-- Örnek Task 2 (Aktif) -->
                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="task2">
                        <label class="form-check-label" for="task2">
                            Finish project presentation
                        </label>
                    </div>
                    <button class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>

                <!-- Örnek Task 3 (Aktif) -->
                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="task3">
                        <label class="form-check-label" for="task3">
                            Call the client
                        </label>
                    </div>
                    <button class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>

            <!-- İstatistikler -->
            <div class="mt-4 text-center text-muted">
                <small>Double-click to edit tasks | Drag to reorder</small>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
    body {
        background-color: #f8f9fa;
    }
    .list-group-item {
        transition: all 0.3s ease;
    }
    .list-group-item:hover {
        background-color: #f1f1f1;
    }
    .form-check-input:checked + .form-check-label {
        opacity: 0.6;
    }
</style>
